<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181819"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp" android:padding="5dp">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingTop="25dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:paddingTop="0dp"
                android:text="TextViewJKKSHSKSHJFHSSFS"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:text="shfjkshfkjshfjshjfhshfjshfshfkjshjkshfsfhksjhhkshfkjshjggghjcgcghgsgjsggfjsgfjsghsgjgfsgfjsgjfgjfgsfgjsgfjgsjfgsjgfjsgfjhsgfjsgfgsjhgfjsgfjs"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>