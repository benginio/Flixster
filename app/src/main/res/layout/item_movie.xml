    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp" android:padding="5dp">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:paddingTop="5dp"
        tools:srcCompat="@tools:sample/avatars" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="TextViewJKKSHSKSHJFHSSFS"
        android:paddingTop="0dp" android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:text="shfjkshfkjshfjshjfhshfjshfshfkjshjkshfsfhksjhhkshfkjshjggghjcgcghgsgjsggfjsgfjsghsgjgfsgfjsgjfgjfgsfgjsgfjgsjfgsjgfjsgfjhsgfjsgfgsjhgfjsgfjs"
        />
    </LinearLayout>

</LinearLayout>
</RelativeLayout>